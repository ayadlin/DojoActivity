@model DojoActivity.Models.ActivityViewModels
<nav>
    <h1>Create your activity</h1>
    <a href="/Activity">Dashboard</a>
    <a href="/Home/logout">Logout</a>
</nav>
<form method="post" asp-controller="Activities" asp-action="newActivity">
    <div class="form-group">
        <span asp-validation-for="Title"></span>
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title">
    </div>
    <div class="form-group">
        <span asp-validation-for="Date"></span>
        <label asp-for="Date"></label>
        <input class="form-control" asp-for="Date">
    </div>
    <div class="form-group">
        <span asp-validation-for="Time"></span>
        <label asp-for="Time"></label>
        <input class="form-control" asp-for="Time">
    </div>
    <div class="form-group">
        <span asp-validation-for="Duration"></span>
        <label asp-for="Duration"></label>
        <input class="form-control" asp-for="Duration">
    </div>
    <div class="form-group">
        <span asp-validation-for="Units"></span>
        <label asp-for="Units"></label>
        <select class="form-control" asp-for="Units">
            <option value="minutes">minutes</option>
            <option value="hours">hours</option>
            <option value="days">days</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <input type="submit" value="Create">
</form>
